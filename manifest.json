{

  "manifest_version": 2,
  "name": "Schmackhaft",
  "version": "0.1",
  "description": "Bookmark manager reminiscent to del.icio.us",
  "icons": {
    "128": "icons/icon.png"
  },
  "sidebar_action": {
    "default_title": "Schmackhaft",
    "default_panel": "sidebar.html",
    "default_icon": "icons/icon.png"
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
        "128": "icons/icon.png"
    },
    "default_title": "Save to Schmackhaft",
    "show_matches": ["http://*/*", "https://*/*"],
    "default_popup": "popup/page_action.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": ["<all_urls>", "tabs", "storage"]
}
